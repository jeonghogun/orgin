# --- OpenAI API Settings ---
OPENAI_API_KEY="YOUR_API_KEY_HERE"

# --- Anthropic API Settings (Optional) ---
ANTHROPIC_API_KEY=""

# --- Google AI Settings (Optional) ---
GEMINI_API_KEY=""


# --- LLM Settings ---
LLM_MODEL="gpt-4o"
LLM_TIMEOUT=30.0
LLM_MAX_RETRIES=2

# --- Firebase Configuration ---
FIREBASE_SERVICE_ACCOUNT_PATH="/path/to/your/firebase-service-account.json"

# --- Authentication Settings ---
AUTH_OPTIONAL=False  # Set to True for local development without authentication

# --- WebSocket Settings ---
WS_CLIENT_ID_OPTIONAL=True


# --- Database Settings (for testing and local dev) ---
# This is a dummy URL for local development and for pytest to import the app.
# Pytest will override this with a temporary database URL during test execution.
DATABASE_URL="postgresql://user:password@localhost:5432/testdb"
# This is a dummy key. For production, use a secure, randomly generated key.
# Must be 32 bytes (256 bits) long.
DB_ENCRYPTION_KEY="a-super-secret-key-that-is-32-bytes-long"
