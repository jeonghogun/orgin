# --- OpenAI API Settings ---
OPENAI_API_KEY="YOUR_API_KEY_HERE"

# --- Anthropic API Settings (Optional) ---
ANTHROPIC_API_KEY=""

# --- Google AI Settings (Optional) ---
GEMINI_API_KEY=""


# --- LLM Settings ---
LLM_MODEL="gpt-4o"
LLM_TIMEOUT=30.0
LLM_MAX_RETRIES=2

# --- Firebase Configuration ---
FIREBASE_SERVICE_ACCOUNT_PATH="/path/to/your/firebase-service-account.json"

# --- Google Cloud Storage (Optional) ---
CLOUD_STORAGE_BUCKET_NAME=""

# --- Authentication Settings ---
AUTH_OPTIONAL=False  # Set to True for local development without authentication

# --- WebSocket Settings ---
WS_CLIENT_ID_OPTIONAL=True


# --- Frontend Build Settings ---
VITE_API_BASE_URL=""
VITE_WS_BASE_URL=""


# --- Database Settings ---
POSTGRES_USER="user"
POSTGRES_PASSWORD="password"
POSTGRES_DB="origin_db"

# This URL is constructed from the variables above and used by the application within the Docker network.
# For external connections during local dev (e.g., DB GUI), you might use localhost:5432.
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@pgbouncer:6432/${POSTGRES_DB}"

# This is a dummy key. For production, use a secure, randomly generated key.
# Must be 32 bytes (256 bits) long.
DB_ENCRYPTION_KEY="a-super-secret-key-that-is-32-bytes-long"
