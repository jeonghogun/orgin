# This is an example environment file.
# For local development, copy this file to .env and fill in the values.
# In production, these variables should be set directly in the environment
# or injected via a secret management service.

# -- Required --
# Your OpenAI API key
OPENAI_API_KEY=""

# API Keys for other LLM providers (optional, but needed for full multi-agent review)
GEMINI_API_KEY=""
ANTHROPIC_API_KEY=""

# --- Development & Debugging ---
# Force all LLM calls to use the default provider (openai) instead of the multi-provider setup.
FORCE_DEFAULT_PROVIDER=False
ALERT_PROVIDER_FAILURE_RATE_THRESHOLD=0.5

# Connection string for the PostgreSQL database
# For local development with Docker, this should point to the pgbouncer service.
# Format: postgresql://<user>:<password>@<host>:<port>/<dbname>
DATABASE_URL="postgresql://user:password@pgbouncer:6432/origin_db"

# A secret key for encrypting data in the database.
# Must be a strong, randomly generated key.
# For local dev, a simple string is fine, but it must be set.


# -- Optional --
# For connecting to external services
GOOGLE_API_KEY=""
GOOGLE_CSE_ID=""

# For connecting to Firebase
FIREBASE_PROJECT_ID=""
# Note: For Firebase, you also need to provide the service account JSON.
# The path to this file can be set with FIREBASE_SERVICE_ACCOUNT_PATH,
# or the JSON content can be set as a multi-line environment variable.

# For connecting to a different Redis instance
REDIS_URL="redis://redis:6379"
CELERY_BROKER_URL="redis://redis:6379/0"
CELERY_RESULT_BACKEND="redis://redis:6379/0"

# -- Frontend --
# These are used by the React app. The vite dev server uses the proxy.
VITE_API_BASE_URL=http://localhost:8080/api
VITE_WS_BASE_URL=ws://localhost:8080
DB_ENCRYPTION_KEY="demo_encryption_key_32_characters_long"
